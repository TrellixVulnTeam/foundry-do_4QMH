# {{ ansible_managed }}
[Unit]
Description=Foundry VTT
Documentation=https://foundryvtt.com/kb/
After=network-online.target

[Service]
Type=simple
Restart=on-failure
User={{ foundry_user }}
Group={{ foundry_group }}
EnvironmentFile=/home/{{ foundry_user }}/adminKey
ExecStart=/usr/bin/node {{ foundry_dir }}/resources/app/main.js --dataPath=/home/{{ foundry_user }}/FoundryVTT $FOUNDRY_ADMIN

[Install]
WantedBy=multi-user.target
